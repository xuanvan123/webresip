@model IEnumerable<ResipWeb.Models.HomeService>

@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    /* Thêm vào phần <style> */
    section,
    .service,
    .categories-section,
    .product,
    .why-choose-section,
    .stats-section,
    .testimonials-section,
    .blog-section {
        padding-top: 80px !important;
        padding-bottom: 80px !important;
    }

    /* Nếu muốn thu nhỏ khoảng cách trên mobile */
    @@media (max-width: 768px) {
        section, .service, .categories-section, .product, .why-choose-section, .stats-section, .testimonials-section, .blog-section {
            padding-top: 40px !important;
            padding-bottom: 40px !important;
        }
    }

    :root {
        --primary-color: #026625;
        --secondary-color: #f8f9fa;
        --text-dark: #2c3e50;
        --border-color: #e0e0e0;
        --shadow: 0 2px 8px rgba(0,0,0,0.1);
        --shadow-hover: 0 4px 16px rgba(0,0,0,0.15);
    }

    /* Hero Slider Improvements */
    .carousel .item {
        min-height: 500px;
        position: relative;
    }

    /* ảnh banner */
    .slider-img {
        width: 100%;
        height: 500px;
        object-fit: cover;
        display: block;
    }



    /* text nổi lên trên */
    .slide-text {
        position: relative;
        z-index: 2;
    }

    .featured-container {
        overflow: hidden; /* KHÓA TOÀN BỘ TRÀN NGANG */
    }

        .featured-container .owl-stage-outer {
            overflow: hidden;
        }

    /* responsive */
    @@media (max-width: 768px) {
        .slider-img {
            height: 350px;
        }
    }

    .bs-slider-overlay {
        background: transparent !important; /* hoặc rgba(0,0,0,.25) nếu muốn tối nhẹ */
        opacity: 1 !important;
        pointer-events: none;
        z-index: 1;
    }



    .slide-text h1 {
        font-size: 48px;
        font-weight: 700;
        color: white;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        margin-bottom: 20px;
    }

    .slide-text p {
        font-size: 20px;
        color: white;
        margin-bottom: 30px;
    }

    .slide-text .btn {
        background: var(--primary-color);
        color: white;
        padding: 15px 40px;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        transition: all 0.3s;
    }

        .slide-text .btn:hover {
            background: #014d1c;
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

    /* Service Section */
    .service {
        padding: 60px 0;
    }

        .service .item {
            text-align: center;
            padding: 30px 20px;
            background: white;
            border-radius: 12px;
            transition: all 0.3s;
            height: 100%;
        }

            .service .item:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

            .service .item .photo {
                margin-bottom: 20px;
            }

            .service .item h3 {
                font-size: 18px;
                font-weight: 700;
                color: var(--text-dark);
                margin-bottom: 10px;
            }

            .service .item p {
                color: #666;
                font-size: 14px;
                line-height: 1.6;
            }

    /* Section Headline */
    .headline {
        text-align: center;
        margin-bottom: 50px;
    }

        .headline h2 {
            font-size: 36px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 10px;
            position: relative;
            display: inline-block;
        }

            .headline h2::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background: var(--primary-color);
                border-radius: 2px;
            }

        .headline h3 {
            font-size: 16px;
            color: #666;
            font-weight: 400;
            margin-top: 20px;
        }

    /* Product Cards */
    .product-carousel .item {
        margin: 0 10px;
    }

    .product-carousel .thumb {
        border: 2px solid var(--primary-color);
        border-radius: 12px;
        padding: 10px;
        overflow: hidden;
        position: relative;
        transition: all 0.3s;
    }

        .product-carousel .thumb:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

    .product-carousel .photo {
        height: 250px; /* Bắt buộc cố định chiều cao để các khung đều nhau */
        background-size: contain; /* QUAN TRỌNG: Giữ đúng tỉ lệ ảnh, không bị méo */
        background-repeat: no-repeat;
        background-position: center;
        background-color: #fff; /* Nền trắng cho phần trống của ảnh */
        border-radius: 8px 8px 0 0;
    }

    /* Fix lỗi khung sản phẩm bị container bóp nhỏ */
    .product-carousel .item {
        padding: 10px;
    }

    .product-carousel .text {
        padding: 20px 10px;
    }

        .product-carousel .text h3 {
            font-size: 16px;
            margin-bottom: 10px;
            height: 48px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

            .product-carousel .text h3 a {
                color: var(--text-dark);
                text-decoration: none;
                font-weight: 600;
            }

                .product-carousel .text h3 a:hover {
                    color: var(--primary-color);
                }

        .product-carousel .text h4 {
            font-size: 20px;
            color: var(--primary-color);
            font-weight: 700;
            margin: 15px 0;
        }

    .product-carousel .btn {
        background: var(--primary-color);
        color: white;
        border-radius: 25px;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: 600;
        display: inline-block;
        transition: all 0.3s;
    }

        .product-carousel .btn:hover {
            background: #014d1c;
            transform: translateY(-2px);
        }

    /* Categories Section */
    .categories-section {
        padding: 70px 0;
        background: white;
    }

    .category-card {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        height: 280px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        .category-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

        .category-card:hover img {
            transform: scale(1.1);
        }

    .category-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.7));
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: white;
    }

        .category-overlay h3 {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .category-overlay p {
            font-size: 14px;
            opacity: 0.9;
        }

    /* Testimonials Section */
    .testimonials-section {
        padding: 70px 0;
        background: linear-gradient(135deg, #f0f9f4 0%, #e8f5e9 100%);
    }

    .testimonial-card {
        background: white;
        border-radius: 12px;
        padding: 40px 30px;
        box-shadow: var(--shadow);
        margin: 0 10px;
        transition: all 0.3s;
    }

        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

    .testimonial-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 25px;
    }

    .testimonial-avatar {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--primary-color);
    }

        .testimonial-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .testimonial-info h4 {
        font-size: 18px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 5px;
    }

    .testimonial-stars {
        color: #ffc107;
        font-size: 16px;
    }

    .testimonial-content {
        font-size: 15px;
        line-height: 1.8;
        color: #555;
        font-style: italic;
    }

    .testimonial-quote {
        font-size: 48px;
        color: var(--primary-color);
        opacity: 0.3;
        line-height: 1;
        margin-bottom: -20px;
    }

    /* Stats Section */
    .stats-section {
        padding: 70px 0;
        background: var(--primary-color);
        color: white;
    }

    .stat-item {
        text-align: center;
        padding: 30px 20px;
    }

    /* --- TẠO VIỀN TRẮNG CHO EMOJI --- */
    .stat-icon {
        font-size: 60px; /* Tăng kích thước emoji lên chút cho đẹp */
        margin-bottom: 20px;
        cursor: default;
        /* Thủ thuật tạo viền trắng (Sticker effect) */
        text-shadow: 3px 0 0 #fff, -3px 0 0 #fff, 0 3px 0 #fff, 0 -3px 0 #fff, 2px 2px 0 #fff, -2px -2px 0 #fff, 2px -2px 0 #fff, -2px 2px 0 #fff;
    }

    .stat-number {
        font-size: 48px;
        font-weight: 700;
        margin-bottom: 10px;
        display: block;
    }

    .stat-label {
        font-size: 16px;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Blog Section */
    .blog-section {
        padding: 70px 0;
        background: white;
    }

    .blog-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: all 0.3s;
        height: 100%;
    }

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

    .blog-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
    }

    .blog-content {
        padding: 25px;
    }

    .blog-meta {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
        font-size: 13px;
        color: #999;
    }

        .blog-meta span {
            display: flex;
            align-items: center;
            gap: 5px;
        }

    .blog-title {
        font-size: 18px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 12px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

        .blog-title a {
            color: var(--text-dark);
            text-decoration: none;
        }

            .blog-title a:hover {
                color: var(--primary-color);
            }

    .blog-excerpt {
        color: #666;
        font-size: 14px;
        line-height: 1.7;
        margin-bottom: 15px;
    }

    .blog-read-more {
        color: var(--primary-color);
        font-weight: 600;
        text-decoration: none;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .blog-read-more:hover {
            gap: 10px;
        }

    /* Brand Section */
    .brands-section {
        padding: 70px 0;
        background: var(--secondary-color);
    }

    .brand-item {
        text-align: center;
        padding: 20px;
        background: white;
        border-radius: 12px;
        transition: all 0.3s;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .brand-item:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow);
        }

        .brand-item img {
            max-width: 100%;
            max-height: 80px;
            opacity: 0.7;
            transition: opacity 0.3s;
        }

        .brand-item:hover img {
            opacity: 1;
        }

    /* Newsletter Section */
    .newsletter-section {
        padding: 70px 0;
        background: linear-gradient(135deg, var(--primary-color) 0%, #014d1c 100%);
        color: white;
    }

    .newsletter-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .newsletter-icon {
        font-size: 64px;
        margin-bottom: 20px;
    }

    .newsletter-content h2 {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .newsletter-content p {
        font-size: 16px;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .newsletter-form {
        display: flex;
        gap: 10px;
        max-width: 500px;
        margin: 0 auto;
    }

        .newsletter-form input {
            flex: 1;
            padding: 15px 20px;
            border: none;
            border-radius: 50px;
            font-size: 15px;
        }

        .newsletter-form button {
            background: white;
            color: var(--primary-color);
            border: none;
            padding: 15px 40px;
            border-radius: 50px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
        }

            .newsletter-form button:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(255,255,255,0.3);
            }

    /* Why Choose Us Section */
    .why-choose-section {
        padding: 70px 0;
        background: white;
    }

    .why-choose-card {
        text-align: center;
        padding: 40px 25px;
        background: var(--secondary-color);
        border-radius: 12px;
        transition: all 0.3s;
        height: 100%;
    }

        .why-choose-card:hover {
            background: white;
            box-shadow: var(--shadow-hover);
            transform: translateY(-5px);
        }

    .why-choose-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color), #014d1c);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        color: white;
        font-size: 36px;
    }

    .why-choose-card h3 {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 15px;
    }

    .why-choose-card p {
        color: #666;
        font-size: 14px;
        line-height: 1.7;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .slide-text h1 {
            font-size: 28px;
        }

        .slide-text p {
            font-size: 16px;
        }

        .headline h2 {
            font-size: 28px;
        }

        .newsletter-form {
            flex-direction: column;
        }

        .stat-number {
            font-size: 36px;
        }

        .category-card {
            height: 200px;
            margin-bottom: 20px;
        }
    }
</style>

<!-- SLIDER -->
<div id="bootstrap-touch-slider" class="carousel bs-slider fade control-round indicators-line"
     data-ride="carousel" data-pause="hover" data-interval="5000">

    <ol class="carousel-indicators">
        <li data-target="#bootstrap-touch-slider" data-slide-to="0" class="active"></li>

    </ol>

    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img src="~/assets/uploads/slider-1.jpg" class="slider-img" alt="Slider 1" />
            <div class="bs-slider-overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="slide-text slide_style_center">
                        <h1 data-animation="animated flipInX">Bình Nước Gấp Gọn ReSip</h1>
                        <p data-animation="animated fadeInDown">Giải pháp hoàn hảo cho lối sống năng động</p>
                        <a href="#" class="btn btn-primary" data-animation="animated fadeInDown">Khám Phá Ngay</a>
                    </div>
                </div>
            </div>
        </div>



    </div>


    <a class="left carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="prev">
        <span class="fa fa-angle-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="next">
        <span class="fa fa-angle-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

