@model ResipWeb.Models.SanPham

<div class="container mt-4">
    <h2>Thêm sản phẩm mới</h2>
    <hr />
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label class="form-label">Tên sản phẩm</label>
                    <input asp-for="TenSanPham" class="form-control" placeholder="Nhập tên sản phẩm..." />
                    <span asp-validation-for="TenSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Danh mục sản phẩm</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Giá bán (VNĐ)</label>
                        <input asp-for="GiaBan" type="number" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Giá cũ (nếu có)</label>
                        <input asp-for="GiaCu" type="number" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label class="form-label">Ảnh đại diện sản phẩm</label>
                    <input type="file" name="imgFile" class="form-control" accept="image/*" onchange="previewImg(this)" />
                    <div class="mt-2">
                        <img id="preview" src="/images/no-image.png" class="img-thumbnail" style="max-height: 200px" />
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary px-5">Lưu sản phẩm</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Hàm để xem trước ảnh khi chọn file
        function previewImg(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}