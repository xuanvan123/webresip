@model ResipWeb.Models.DonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.MaDonHang;
}

<style>
    /* --- CSS Chung (Sidebar & Layout) --- */
    .dashboard-container {
        padding: 50px 0;
        background-color: #f9f9f9;
        min-height: 80vh;
    }

    .account-sidebar {
        background: #fff;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .user-profile-header {
        padding: 30px 20px;
        text-align: center;
        border-bottom: 1px solid #eee;
        background-color: #fff;
    }

    .user-avatar {
        width: 70px;
        height: 70px;
        background-color: #026625;
        color: #fff;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 15px;
    }

    .account-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .account-menu li a {
            display: flex;
            align-items: center;
            padding: 15px 25px;
            color: #555;
            border-bottom: 1px solid #f8f8f8;
            text-decoration: none;
            transition: all 0.2s;
            font-weight: 500;
        }

            .account-menu li a:hover, .account-menu li a.active {
                background-color: #026625;
                color: #fff;
            }

            .account-menu li a i {
                margin-right: 15px;
                width: 20px;
                text-align: center;
            }

    /* --- CSS Riêng cho Chi tiết đơn hàng --- */
    .detail-card {
        background: #fff;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 20px;
    }

    .detail-header {
        background: #f8f9fa;
        padding: 15px 20px;
        border-bottom: 1px solid #e1e1e1;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .detail-body {
        padding: 20px;
    }

    .product-item {
        display: flex;
        align-items: center;
        padding-bottom: 15px;
        margin-bottom: 15px;
        border-bottom: 1px solid #f1f1f1;
    }

        .product-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .product-img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid #eee;
        margin-right: 15px;
    }

    .info-label {
        font-size: 13px;
        color: #6c757d;
        text-transform: uppercase;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .info-value {
        font-size: 15px;
        color: #333;
        font-weight: 500;
    }

    /* Badge trạng thái (Copy từ trang History) */
    .status-badge {
        padding: 6px 12px;
        border-radius: 50px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .status-pending {
        background: #fff3cd;
        color: #856404;
    }

    .status-shipping {
        background: #cff4fc;
        color: #055160;
    }

    .status-success {
        background: #d1e7dd;
        color: #0f5132;
    }

    .status-cancel {
        background: #f8d7da;
        color: #721c24;
    }

    .status-default {
        background: #e2e3e5;
        color: #383d41;
    }
</style>

<div class="dashboard-container">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12">
                <h2 style="font-weight: 800; color: #1a1a1a; margin-bottom: 20px; border-left: 5px solid #026625; padding-left: 15px;">
                    CHI TIẾT ĐƠN HÀNG
                </h2>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary" style="border-radius: 20px;">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="account-sidebar">
                    <div class="user-profile-header">
                        <div class="user-avatar">
                            <span>@(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")</span>
                        </div>
                        <h5 class="mb-1 fw-bold">@User.Identity.Name</h5>
                        <small class="text-muted">Thành viên</small>
                    </div>
                    <ul class="account-menu">
                        <li><a href="/Account/Dashboard"><i class="fa fa-dashboard"></i> Trang tài khoản</a></li>
                        <li><a href="#" class="active"><i class="fa fa-shopping-bag"></i> Đơn hàng</a></li>
                        <li><a href="#"><i class="fa fa-download"></i> Tải xuống</a></li>
                        <li><a href="#"><i class="fa fa-map-marker"></i> Sổ địa chỉ</a></li>
                        <li><a href="#"><i class="fa fa-user-circle"></i> Thông tin cá nhân</a></li>
                        <li>
                            <a asp-controller="Account" asp-action="Logout" style="color: #dc3545;">
                                <i class="fa fa-sign-out"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-9 col-md-8">

                <div class="detail-card">
                    <div class="detail-header">
                        <div>
                            <span style="font-size: 14px; color: #666;">Đơn hàng:</span>
                            <span style="font-family: monospace; font-weight: 700; color: #026625; font-size: 16px;">#@Model.MaDonHang</span>
                        </div>
                        <div>
                            @{
                                var statusClass = "status-default";
                                var statusText = Model.TrangThai;
                                if (Model.TrangThai == "ChoXuLy") { statusClass = "status-pending"; statusText = "Chờ xử lý"; }
                                else if (Model.TrangThai == "DangGiao") { statusClass = "status-shipping"; statusText = "Đang giao"; }
                                else if (Model.TrangThai == "ThanhCong") { statusClass = "status-success"; statusText = "Thành công"; }
                                else if (Model.TrangThai == "DaHuy") { statusClass = "status-cancel"; statusText = "Đã hủy"; }
                            }
                            <span class="status-badge @statusClass">@statusText</span>
                        </div>
                    </div>
                    <div class="detail-body">
                        <div class="row">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <div class="info-label">Thông tin người nhận</div>
                                <div class="info-value">@Model.HoTen</div>
                                <div class="text-muted small mt-1">@Model.DienThoai</div>
                                <div class="text-muted small">@Model.DiaChi</div>
                                @* --- CHÈN NÚT VÀO ĐÂY --- *@
                                @if (Model.TrangThai == "ChoXuLy" || Model.TrangThai == "Chờ xử lý")
                                {
                                    <div class="mt-3">
                                        <a asp-controller="DonHang" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm text-white" style="border-radius: 20px; font-weight: 600;">
                                            <i class="fa fa-edit"></i> Chỉnh sửa thông tin
                                        </a>
                                    </div>
                                }
                            </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-label">Thông tin đơn hàng</div>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted small">Ngày đặt:</span>
                                    <span class="small">@(Model.NgayTao.HasValue? Model.NgayTao.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted small">Phương thức:</span>
                                    <span class="small">COD (Thanh toán khi nhận)</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted small">Tổng tiền:</span>
                                    <span class="fw-bold text-danger">@(Model.TongTien.HasValue? Model.TongTien.Value.ToString("#,##0") : "0") đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="detail-card">
                    <div class="detail-header">
                        <span class="fw-bold" style="color: #333;">Sản phẩm đã mua</span>
                    </div>
                    <div class="detail-body">
                        @if (Model.ChiTietDonHangs != null && Model.ChiTietDonHangs.Any())
                        {
                            @foreach (var item in Model.ChiTietDonHangs)
                            {
                                <div class="product-item">
                                    <img src="@(item.SanPham?.AnhChinh ?? "/assets/uploads/no-image.png")" class="product-img" alt="Product">

                                    <div class="flex-grow-1">
                                        <h6 class="mb-1" style="font-size: 15px; color: #1a1a1a;">@item.TenSanPham</h6>

                                        <div class="small text-muted">
                                            <span>Số lượng: x @item.SoLuong</span>
                                        </div>
                                    </div>

                                    <div class="text-end">
                                        <div class="fw-bold text-dark">
                                            @item.DonGia.ToString("#,##0") đ
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="border-top mt-3 pt-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span style="font-size: 16px; font-weight: 600;">Tổng cộng</span>
                                    <span style="font-size: 20px; font-weight: 800; color: #dc3545;">
                                        @(Model.TongTien.HasValue? Model.TongTien.Value.ToString("#,##0") : "0") đ
                                    </span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-muted m-0">Không có thông tin chi tiết sản phẩm</p>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>