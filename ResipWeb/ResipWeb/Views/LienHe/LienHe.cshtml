@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BANNER -->
<div class="page-banner" style="background-color:#28A745">
    <div class="inner text-center">
        <h1>Liên Hệ</h1>
    </div>
</div>

<!-- NỘI DUNG LIÊN HỆ -->
<div class="page contact-section">
    <div class="container">
        <div class="row">
            <!-- bọc nội dung cho gọn, không full 100% -->
            <div class="col-md-10 col-md-offset-1">
                <h3 class="text-center contact-title">Biểu mẫu liên hệ</h3>

                <div class="row">
                    <!-- FORM LIÊN HỆ -->
                    <div class="col-md-7">
                        <div class="contact-card" style="padding:25px;">
                            <form asp-controller="LienHe" asp-action="LienHe" method="post">
                                @Html.AntiForgeryToken()

                                <div class="form-group mb-3">
                                    <label for="visitor_name">Họ và tên</label>
                                    <input type="text" class="form-control" id="visitor_name"
                                           name="visitor_name" placeholder="Nhập họ và tên">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="visitor_email">Địa chỉ email</label>
                                    <input type="email" class="form-control" id="visitor_email"
                                           name="visitor_email" placeholder="Nhập địa chỉ email">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="visitor_phone">Số điện thoại</label>
                                    <input type="text" class="form-control" id="visitor_phone"
                                           name="visitor_phone" placeholder="Nhập số điện thoại">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="visitor_message">Nội dung</label>
                                    <textarea id="visitor_message" name="visitor_message"
                                              class="form-control" rows="5"
                                              placeholder="Nhập nội dung tin nhắn"></textarea>
                                </div>

                                <button type="submit" class="btn"
                                        style="background-color:#026625;color:#fff;width:100%;"
                                        name="form_contact">
                                    Gửi tin nhắn
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- THÔNG TIN VĂN PHÒNG -->
                    <div class="col-md-5">
                        <div class="contact-info-card" style="padding:25px;">
                            <h5>Văn phòng của chúng tôi</h5>
                            <p>279 Nguyễn Tri Phương, Phường Diên Hồng, TP. Hồ Chí Minh, Việt Nam</p>
                            <p><strong>Điện thoại:</strong> 0123 456 789</p>
                            <p><strong>Email:</strong> <a href="mailto:hotro.resip@gmail.com">hotro.resip@gmail.com</a></p>
                        </div>
                    </div>
                </div>

                <!-- MAP -->
                <h3 class="text-center" style="margin-top:45px;margin-bottom:20px;">Tìm chúng tôi trên bản đồ</h3>
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.6526865461547!2d106.66586650885426!3d10.76122775943319!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ee4ecfa255d%3A0x9e5ec3fa6801b7d6!2zMjc5IMSQLiBOZ3V54buFbiBUcmkgUGjGsMahbmcsIFBoxrDhu51uZyA1LCBRdeG6rW4gMTAsIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1733715107384!5m2!1svi!2s"
                            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy">
                    </iframe>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .contact-section {
        padding: 50px 0 60px;
    }

    .contact-title {
        margin-bottom: 25px;
        font-weight: 600;
    }

    .contact-card,
    .contact-info-card {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        background: #fff;
    }

        .contact-card .form-control,
        .contact-card textarea {
            border-radius: 4px;
        }

        .contact-info-card h5 {
            margin-top: 0;
            margin-bottom: 15px;
            font-weight: 600;
        }
</style>
