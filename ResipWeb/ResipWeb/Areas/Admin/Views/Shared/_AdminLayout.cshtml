@inject ResipWeb.Models.AppDbContext _context
@{
    var setting = _context.WebsiteSettings.FirstOrDefault() ?? new ResipWeb.Models.WebsiteSetting();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="@(string.IsNullOrEmpty(setting.FaviconUrl) ? "/favicon.ico" : setting.FaviconUrl)">
    


 


    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/dist/css/adminlte.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
    <div class="app-wrapper">

        <nav class="app-header navbar navbar-expand bg-body">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-lte-toggle="sidebar" href="#">
                            <i class="bi bi-list"></i>
                        </a>
                    </li>
                    <li class="nav-item d-none d-md-block">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="nav-link">
                            <i class="nav-icon bi bi-speedometer"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
            <div class="sidebar-brand">
                <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="brand-link">
                    <span class="brand-text fw-light">ADMIN PANEL</span>
                </a>
            </div>

            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <ul class="nav sidebar-menu flex-column" role="menu">

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-speedometer"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-people-fill"></i>
                                <p>Quản lý Tài khoản</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="SanPham" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-box-seam"></i>
                                <p>Quản lý sản phẩm</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-tags"></i>
                                <p>Quản lý Danh mục</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="DonHangs" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-receipt"></i>
                                <p>Quản lý đơn hàng</p>
                            </a>
                        </li>

                     

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Setting" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-sliders"></i>
                                <p>Cài đặt website</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Banner" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-images"></i>
                                <p>Quản lý banner</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Service" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-grid"></i>
                                <p>Quản lý dịch vụ</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="CauHoiAdmin" asp-action="Index">
                                <i class="nav-icon bi bi-question-circle"></i>
                                <p>Quản lý Câu hỏi</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Blogs" asp-action="Index">
                                <i class="fas fa-fw fa-newspaper"></i>
                                <span>Quản lý Tin tức</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Page" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-file-earmark-text"></i>
                                <p>Quản lý trang</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Social" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-share"></i>
                                <p>Mạng xã hội</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Subscriber" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-hand-thumbs-up"></i>
                                <p>Người đăng ký</p>
                            </a>
                        </li>

                      

                    </ul>
                </nav>
            </div>
        </aside>

        <main class="app-main">
            @RenderBody()
        </main>

        <footer class="app-footer">
            <div class="float-end d-none d-sm-inline">Admin Panel</div>
            <strong>© 2025 ResipWeb</strong>
        </footer>

    </div>

    <script src="~/dist/js/adminlte.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>