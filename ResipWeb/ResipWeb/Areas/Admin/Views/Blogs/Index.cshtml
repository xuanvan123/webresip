@model IEnumerable<ResipWeb.Models.Blog>

@{
    ViewData["Title"] = "Quản lý tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Admin Design System */
    .page-wrapper {
        padding: 24px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    /* Header */
    .page-header {
        background: white;
        padding: 24px;
        border-radius: 12px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .page-header h3 {
            margin: 0 0 4px 0;
            font-size: 24px;
            font-weight: 700;
            color: #1a1a1a;
        }

        .page-header p {
            margin: 0;
            color: #6c757d;
            font-size: 14px;
        }

    /* Button Create */
    .btn-create {
        background: #3b82f6;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
        border: none;
    }

        .btn-create:hover {
            background: #2563eb;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
            color: white;
        }

    /* Stats Cards */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 24px;
    }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        border-left: 4px solid;
    }

        .stat-card.blue {
            border-left-color: #3b82f6;
        }

        .stat-card.green {
            border-left-color: #10b981;
        }

        .stat-card.gray {
            border-left-color: #6b7280;
        }

    .stat-label {
        font-size: 13px;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 5px;
    }

    .stat-value {
        font-size: 28px;
        font-weight: 700;
        color: #1a1a1a;
    }

    /* Table Styles */
    .table-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table thead {
            background: #f9fafb;
        }

        .custom-table th {
            padding: 16px;
            text-align: left;
            font-size: 12px;
            font-weight: 700;
            color: #4b5563;
            text-transform: uppercase;
            border-bottom: 1px solid #e5e7eb;
        }

        .custom-table td {
            padding: 16px;
            border-bottom: 1px solid #f3f4f6;
            vertical-align: middle;
            color: #1f2937;
        }

        .custom-table tr:hover {
            background: #f9fafb;
        }

    /* Column Specifics */
    .post-image {
        width: 60px;
        height: 40px;
        object-fit: cover;
        border-radius: 4px;
        border: 1px solid #eee;
    }

    .post-title {
        font-weight: 600;
        font-size: 15px;
        color: #111827;
        display: block;
        margin-bottom: 4px;
    }

    .post-desc {
        color: #6b7280;
        font-size: 13px;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Badges */
    .status-badge {
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .status-active {
        background: #d1fae5;
        color: #065f46;
    }

        .status-active::before {
            content: '';
            width: 6px;
            height: 6px;
            background: #10b981;
            border-radius: 50%;
        }

    .status-inactive {
        background: #f3f4f6;
        color: #374151;
    }

        .status-inactive::before {
            content: '';
            width: 6px;
            height: 6px;
            background: #6b7280;
            border-radius: 50%;
        }

    /* Actions */
    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: #6b7280;
        background: #f3f4f6;
        transition: all 0.2s;
        text-decoration: none;
        margin-right: 4px;
        border: none;
    }

        .action-btn:hover {
            background: #3b82f6;
            color: white;
        }

        .action-btn.delete:hover {
            background: #ef4444;
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 40px;
        color: #6b7280;
    }
</style>

<div class="page-wrapper">
    <div class="page-header">
        <div>
            <h3>📰 Quản lý tin tức</h3>
            <p>Danh sách bài viết, blog và thông báo</p>
        </div>
        <a asp-action="Create" class="btn-create">
            <span>+</span> Viết bài mới
        </a>
    </div>

    <div class="stats-container">
        <div class="stat-card blue">
            <div class="stat-label">Tổng số bài viết</div>
            <div class="stat-value">@Model.Count()</div>
        </div>
        <div class="stat-card green">
            <div class="stat-label">Đang hiển thị</div>
            <div class="stat-value">@Model.Count(x => x.IsActive)</div>
        </div>
        <div class="stat-card gray">
            <div class="stat-label">Đã ẩn</div>
            <div class="stat-value">@Model.Count(x => !x.IsActive)</div>
        </div>
    </div>

    <div class="table-container">
        @if (Model.Any())
        {
            <div style="overflow-x: auto;">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th width="80">Ảnh</th>
                            <th width="40%">Thông tin bài viết</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="@item.Image" class="post-image" alt="thumb" onerror="this.src='https://via.placeholder.com/60x40?text=No+Img'" />
                                    }
                                    else
                                    {
                                        <div class="post-image" style="background: #eee; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #999;">NO IMG</div>
                                    }
                                </td>
                                <td>
                                    <span class="post-title">@item.Title</span>
                                    <span class="post-desc">@item.Description</span>
                                </td>
                                <td>
                                    <div style="font-weight: 500; font-size: 13px;">@item.CreatedDate.ToString("dd/MM/yyyy")</div>
                                    <small style="color: #9ca3af;">@item.CreatedDate.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="status-badge status-active">Hiển thị</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-inactive">Đang ẩn</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn" title="Sửa">
                                        ✏️
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="action-btn" title="Xem">
                                        👁️
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn delete" title="Xóa">
                                        🗑️
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <h4>Chưa có bài viết nào</h4>
                <p>Hãy bấm nút "Viết bài mới" để bắt đầu</p>
            </div>
        }
    </div>
</div>