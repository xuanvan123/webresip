using System.ComponentModel.DataAnnotations;

namespace ResipWeb.Models
{
    public class ChangePasswordViewModel
    {
        [Required(ErrorMessage = "Vui lòng nhập mật khẩu hiện tại")]
        [DataType(DataType.Password)]
        public string CurrentPassword { get; set; }
        [Required(ErrorMessage = "Vui lòng nhập mật khẩu mới")]
        [DataType(DataType.Password)]
        [MinLength(6, ErrorMessage = "Mật khẩu mới phải ít nhất 6 ký tự")]        public string NewPassword { get; set; }        [DataType(DataType.Password)]        [Compare("NewPassword", ErrorMessage = "Mật khẩu xác nhận không khớp")]        public string ConfirmPassword { get; set; }    }}