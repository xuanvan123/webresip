@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const newPw = document.getElementById('newPw');
            const confirmPw = document.getElementById('confirmPw');
            const btn = document.getElementById('pwConfirmBtn');

            function update() {
                const ok = newPw.value.length >= 6 && newPw.value === confirmPw.value;
                if (ok) {
                    btn.disabled = false; btn.classList.add('enabled');
                } else { btn.disabled = true; btn.classList.remove('enabled'); }
            }

            newPw.addEventListener('input', update);
            confirmPw.addEventListener('input', update);
        })();
    </script>
}